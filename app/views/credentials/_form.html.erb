<%= form_with(model: credential, local: true) do |f| %>
<section class="pt-5 pb-5">

  <div class="row w-100">
    <div class="col-lg-12 col-md-12 col-12">

      <% if credential.errors.any? %>
      <div id="error_explanation">
        <h2 class="mb-5 text-center"><%= pluralize(credential.errors.count, "error") %> prohibited this credential from being saved:</h2>
  
        <ul>
          <% credential.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="panel panel-default">
          <div class="panel-body">
      
              <div class="form-group">
                  <label>API Name:</label>
                  <%= f.text_field :api_name, class: 'form-control', :required => 'required'%>
              </div>

              <div class="form-group">
                  <label>API Key:</label>
                  <%= f.text_field :api_key, class: 'form-control', :required => 'required'%>
              </div>

              <div class="form-group">
                  <label>API Secret:</label>
                  <%= f.text_field :api_secret, class: 'form-control', :required => 'required'%>
              </div>
      
              <div class="actions mt-4">
                  <%= f.submit "Submit", class: "btn btn-primary" %>
              </div>
          </div>
      </div>       

    </div>
  </div>
</section>
<% end %>

