<section class="pt-5 pb-5 pb-0">

        <div class="row justify-content-center header-h100 align-items-center">
            <div class="col-12 col-md-5">        
                <div class="card shadow-lg text-start h-100">
                    <h5 class="card-header text-white bg-secondary">Register</h5>
                    <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <label><h6>Gender</h6></label>                             
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <%= f.radio_button :gender, 'Brother', class: "form-check-input" %> 
                                    <%= f.label :gender, 'Brother', class: "form-check-label", :value => 'Brother' %>
                                </div>
                                <div class="form-check form-check-inline">
                                    <%= f.radio_button :gender, 'Sister', class: "form-check-input" %> 
                                    <%= f.label :gender, 'Sister', class: "form-check-label", :value => 'Sister' %>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>English Name (Full Name Required)</h6></label> 
                                <%= f.text_field :eng_name, :required => 'required', class: "form-control mt-2" %>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>Chinese Name</h6></label> 
                                <%= f.text_field :chn_name, class: "form-control mt-2" %>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>Email (Provide only a valid and existing email)</h6></label> 
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => 'required', class: "form-control mt-2" %>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>Phone Number (Do NOT include symbol e.g. + -)</h6></label> 
                                <%= f.telephone_field :phone_no, class: "form-control mt-2" %>
                            </div>
                              
                            <div class="form-group mt-3">
                                <label><h6>Locality</h6></label> 
                                <%= f.text_field :locality, :required => 'required', class: "form-control mt-2" %>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>Language</h6></label> 
                                <%= f.select :language, [["English", "English"], ["Chinese", "Chinese"], ["Malay", "Malay"]], {}, {class: "form-control mt-2"} %>
                            </div>
                            
                            <div class="form-group mt-3">
                                <label><h6>Password</h6></label> 
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2" %>
                            </div>

                            <div class="form-group mt-3">
                                <label><h6>Confirm Password</h6></label> 
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2" %>
                            </div>
                            
                            <%= f.submit "Submit", class: "btn w-100 mt-3 btn-primary" %>
                        <% end %>
                        <p class="text-center mt-3">
                        <%= link_to 'Login', new_session_path(:user) %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    
</section>