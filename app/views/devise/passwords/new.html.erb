<section class="pt-5 pb-5">
  <div class="pt-5 pb-5">
    <div
      class="row justify-content-center header-h100 align-items-center">
      <div class="col-12 col-md-4">





        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="card shadow-lg text-start h-100">
            <div class="card">
              <h5 class="card-header text-white bg-secondary">Password Reset</h5>
              <div class="card-body">
                
                <div class="form-group">
                  <div class="input-group mb-3">
              
                    <span class="input-group-text"> <i class="fa fa-user"></i></span>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control" %>
                  </div>
                </div>
                
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100" %>

                <p class="text-center mt-3">
                  <%= link_to 'Login', new_session_path(:user) %>
                </p>
              </div>
            </div>
          </div>
        
        <% end %>
      </div>
    </div>
  </div>
</section>