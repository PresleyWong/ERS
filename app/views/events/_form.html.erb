<section class="pt-5 pb-5">

    <div class="row w-100">
      <div class="col-lg-12 col-md-12 col-12">


        <%= form_for @event do |f| %>
        <div class="panel panel-default">
            <div class="panel-body">
        
                <div class="form-group">
                    <label>Title:</label>
                    <%= f.text_field :title, class: 'form-control', :required => 'required'%>
                </div>
        
                <div class="form-group">
                    <label>Date:</label>
                    <%= f.date_field :date, class: 'form-control', :required => 'required'%>
                </div>
        
                <div class="form-group">
                    <label>Time Start:</label>
                    <%= f.time_field :start_time, class: 'form-control', :required => 'required'%>
                </div>
        
                <div class="form-group">
                    <label>Time End:</label>
                    <%= f.time_field :end_time, class: 'form-control', :required => 'required'%>
                </div>
        
                <div class="form-group">
                    <label>Meeting ID:</label>
                    <%= f.text_field :meeting_id1, class: 'form-control', :required => 'required'%>
                </div>

                <div class="form-group">
                    <label>Attachment URL1:</label>
                    <%= f.text_field :attachment_url1, class: 'form-control'%>
                </div>

                <div class="form-group">
                    <label>Attachment URL2:</label>
                    <%= f.text_field :attachment_url2, class: 'form-control'%>
                </div>

                <div class="form-group">
                    <label>Attachment URL3:</label>
                    <%= f.text_field :attachment_url3, class: 'form-control'%>
                </div>
        
                <div class="actions mt-4">
                    <%= f.submit "Submit", class: "btn btn-primary" %>
                </div>
            </div>
        </div>  
        <% end %>

      </div>
    </div>

</section>
